@model AddStudentFormModel

@{
    ViewData["Title"] = "Add student";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <h2 class="heading-margin text-center">Add student</h2>
            <form method="post">
                <div class="form-group">
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    </div>                   
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>Courses</label>
                    <select asp-for="@Model.CourseId1ToMany" asp-items="@(new SelectList(@Model.Courses, "Id", "Name"))" multiple class="form-control">
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>