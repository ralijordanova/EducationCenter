@model IEnumerable<TeacherListingViewModel>
@{
    ViewData["Title"] = "Welcome!";
}

<div class="row">
    @foreach (var teacher in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@teacher.Name" alt="@teacher.PhoneNumber">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@teacher.Name @teacher.Email</h5>
                    <h5><a asp-controller="Teachers" asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-primary">View more</a></h5>
                </div>
            </div>
        </div>
    }

</div>