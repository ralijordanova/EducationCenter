@model AddCourseFormModel

<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <h2 class="heading-margin text-center">Add course</h2>
            
            <form method="post">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                    </div>
                </div>
                <div class="form-group">
                    <div id="date-picker-example" class="md-form md-outline input-with-post-icon datepicker">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate" placeholder="Select Start Date" type="text" class="form-control">
                        <i class="fas fa-calendar input-prefix" tabindex=0></i>
                    </div>
                </div>
                <div class="form-group">
                    <div id="date-picker-example" class="md-form md-outline input-with-post-icon datepicker">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate" placeholder="Select End Date" type="text" class="form-control">
                        <i class="fas fa-calendar input-prefix" tabindex=0></i>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SubjectId"></label>
                    <select asp-for="SubjectId" class="form-control">
                        @foreach (var subject in Model.Subjects)
                        {
                            <option value="@subject.Id">@subject.Name</option>
                        }
                    </select>
                </div> 
                <div class="row">
                    <div class="col">
                        <label asp-for="TeacherId"></label>
                        <input asp-for="TeacherId"type="text" class="form-control" placeholder="Teacher One">
                    </div>
                    <div class="col">
                        <label asp-for="TeacherId"></label>
                        <input asp-for="TeacherId"type="text" class="form-control" placeholder="Teacher Two">
                    </div>
                    <div class="col">
                        <label asp-for="TeacherId"></label>
                        <input asp-for="TeacherId"type="text" class="form-control" placeholder="Teacher Three">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
            
        </div>
    </div>
</div>
