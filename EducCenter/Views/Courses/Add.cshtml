@model AddCourseFormModel

@{
    ViewData["Title"] = "Add course";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <h2 class="heading-margin text-center">Add course</h2>

            <form method="post">
                <div class="form-group">
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="small text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="md-form md-outline input-with-post-icon datepicker">
                        <label>From</label>
                        <input asp-for="StartDate" min="@DateTime.UtcNow.ToString("mm/dd/yyyy")" placeholder="Select Start Date" type="text" class="form-control">
                        <i class="fas fa-calendar input-prefix" tabindex=0></i>
                        <span asp-validation-for="StartDate" class="small text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="md-form md-outline input-with-post-icon datepicker">
                        <label>To</label>
                        <input asp-for="EndDate" min="@DateTime.UtcNow.ToString("mm/dd/yyyy")" placeholder="Select End Date" type="text" class="form-control">
                        <i class="fas fa-calendar input-prefix" tabindex=0></i>
                        <span asp-validation-for="EndDate" class="small text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Url</label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Subject</label>
                    <select asp-for="@Model.SubjectId1ToMany" asp-items="@(new SelectList(@Model.Subjects, "Id", "Name"))" multiple class="form-control"></select>
                    <span asp-validation-for="SubjectId1ToMany" class="small text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>


