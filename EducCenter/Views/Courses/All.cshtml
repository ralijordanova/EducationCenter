@model AllCoursesViewModel

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-3">
            <label>Search</label>
            <input asp-for="Search" class="form-control" placeholder="Name">
        </div>
        <div class="form-group col-md-3">

        </div>
        <div class="form-group col-md-3">

        </div>
        <div class="form-group col-md-3">
            <input type="submit" class="btn btn-primary" value="Search">
        </div>
    </div>
</form>


<div class="row">
    @foreach (var course in Model.Courses)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@course.ImageUrl" alt="@course.Name @course.StartDate @course.EndDate - (@course.Price)">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@course.Price @course.Description</h5>
                    <h5><a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">View more</a></h5>
                </div>
            </div>
        </div>
    }

</div>